<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FBFF"
    android:layout_marginTop="26dp"
    tools:context=".FinancialToolsActivity">

    <!-- Header Section -->
    <include
        layout="@layout/app_header"
        android:layout_marginTop="30dp"
        android:id="@+id/app_header"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <!-- Main Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title for the Grid -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a Financial Tool"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <!-- 2 x 2 Grid of ImageButtons for financial calculators -->
            <GridLayout
                android:id="@+id/financialToolsGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true">

                <!-- Loan Calculator -->
                <LinearLayout
                    android:id="@+id/cardLoan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageButton
                        android:id="@+id/btnLoanCalculator"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/loan_calculator_logo"
                        android:scaleType="centerInside"
                        android:background="@drawable/button_card_bg"
                        android:contentDescription="Loan Calculator"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loan Calculator"
                        android:textColor="#1A73E8"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Compound Interest Calculator -->
                <LinearLayout
                    android:id="@+id/cardCompoundInterest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageButton
                        android:id="@+id/btnCompoundInterestCalculator"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/compound_interest_calculator_logo"
                        android:scaleType="centerInside"
                        android:background="@drawable/button_card_bg"
                        android:contentDescription="Compound Interest Calculator"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="Compound Interest Calculator"
                        android:textAlignment="center"
                        android:textColor="#1A73E8"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Simple Interest Calculator -->
                <LinearLayout
                    android:id="@+id/cardSimpleInterest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageButton
                        android:id="@+id/btnSimpleInterestCalculator"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/simple_interest_calculator_logo"
                        android:scaleType="centerInside"
                        android:background="@drawable/button_card_bg"
                        android:contentDescription="Simple Interest Calculator"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Simple Interest Calculator"
                        android:textAlignment="center"
                        android:textColor="#1A73E8"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Tip Calculator -->
                <LinearLayout
                    android:id="@+id/cardTip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageButton
                        android:id="@+id/btnTipCalculator"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/tip_calculator_logo"
                        android:scaleType="centerInside"
                        android:background="@drawable/button_card_bg"
                        android:contentDescription="Tip Calculator"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tip Calculator"
                        android:textColor="#1A73E8"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Footer Section -->
    <include
        layout="@layout/app_footer"
        android:id="@+id/app_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
