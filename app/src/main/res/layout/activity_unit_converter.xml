<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FBFF"
    android:layout_marginTop="0dp"
    tools:context=".UnitConverterActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/app_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/bgsettings"
        android:elevation="4dp"
        android:layout_marginTop="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">



        <!-- Title of the Activity -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="CalcMate"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />



    </LinearLayout>


    <!-- Main Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title for the Grid -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a Converter"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <!-- 2 x 3 Grid of ImageButtons for different converters -->
            <GridLayout
                android:id="@+id/converterGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true">

                <!-- Length Converter -->
                <LinearLayout
                    android:id="@+id/cardLength"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageButton
                        android:id="@+id/btnLengthConverter"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/length_convert_logo"
                        android:scaleType="centerInside"
                        android:background="@drawable/button_card_bg"
                        android:contentDescription="Length Converter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Length Converter"
                        android:textColor="#1A73E8"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Weight Converter -->
                <LinearLayout
                    android:id="@+id/cardWeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageButton
                        android:id="@+id/btnWeightConverter"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/weight_converter_logo"
                        android:scaleType="centerInside"
                        android:background="@drawable/button_card_bg"
                        android:contentDescription="Weight Converter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight Converter"
                        android:textColor="#1A73E8"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Temperature Converter -->
                <LinearLayout
                    android:id="@+id/cardTemperature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageButton
                        android:id="@+id/btnTemperatureConverter"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/temp_convert_logo"
                        android:scaleType="centerInside"
                        android:background="@drawable/button_card_bg"
                        android:contentDescription="Temperature Converter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Converter"
                        android:textColor="#1A73E8"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Volume Converter -->
                <LinearLayout
                    android:id="@+id/cardVolume"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageButton
                        android:id="@+id/btnVolumeConverter"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/volumeconvert_logo"
                        android:scaleType="centerInside"
                        android:background="@drawable/button_card_bg"
                        android:contentDescription="Volume Converter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volume Converter"
                        android:textColor="#1A73E8"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Area Converter -->
                <LinearLayout
                    android:id="@+id/cardArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageButton
                        android:id="@+id/btnAreaConverter"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/areaconvert_logo"
                        android:scaleType="centerInside"
                        android:background="@drawable/button_card_bg"
                        android:contentDescription="Area Converter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Area Converter"
                        android:textColor="#1A73E8"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Data Transfer Rate Converter -->
                <LinearLayout
                    android:id="@+id/cardDataRate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageButton
                        android:id="@+id/btnDataTransferRateConverter"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/datarate_logo"
                        android:scaleType="centerInside"
                        android:background="@drawable/button_card_bg"
                        android:contentDescription="Data Transfer Rate Converter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Transfer Rate"
                        android:textColor="#1A73E8"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Footer Section -->
    <!-- We include the common footer layout here -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/background"
        android:elevation="8dp"
        android:paddingTop="8dp"

        android:paddingBottom="8dp">

        <!-- Home Icon -->
        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Home"
            android:padding="12dp" />

        <!-- History Icon -->
        <ImageButton
            android:id="@+id/btnHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_history"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="History"
            android:padding="12dp" />

        <!-- Settings Icon -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>
