<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:padding="24dp"
    tools:context=".HealthCalcActivity">

    <!-- Title for the Health Calculators section -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Health Calculators"
        android:textColor="#1F2937"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- A FrameLayout to act as a container for different screens or fragments. -->
    <!-- Initially, it will hold the RecyclerView, but you can replace its content -->
    <!-- with a specific calculator UI (like BMI) at runtime. -->
    <FrameLayout
        android:id="@+id/content_framehealth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <!-- This RecyclerView will display the list of health tools initially -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_health_tool" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
