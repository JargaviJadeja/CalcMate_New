<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CalcMate_New">
        <!-- Splash is your launcher -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Dashboard that Splash opens -->
        <activity android:name=".DashboardActivity" />

        <!-- Destinations -->
        <activity android:name=".BasicCalcActivity" />
        <activity android:name=".ScientificCalcActivity" />
        <activity android:name=".UnitConverterActivity" />
        <activity android:name=".LengthConverterActivity" />
        <activity android:name=".WeightConverterActivity"/>
        <activity android:name=".TemperatureConverterActivity"/>
        <activity android:name=".VolumeConverterActivity"/>
        <activity android:name=".AreaConverterActivity"/>
        <activity android:name=".DataTransferRateConverterActivity"/>
        <activity android:name=".FinancialToolsActivity" />
        <activity android:name=".LoanCalculatorActivity"/>
        <activity android:name=".CompoundInterestCalculatorActivity"/>
        <activity android:name=".SimpleInterestCalculatorActivity"/>
        <activity android:name=".TipCalculatorActivity"/>
        <activity android:name=".HealthCalcActivity" />
        <activity android:name=".DateTimeToolsActivity" />
        <activity android:name=".ProgrammerCalcActivity" />

        <!-- Add these new activities that the footer links to -->
        <activity android:name=".HistoryActivity" />
        <activity android:name=".SettingsActivity" />

        <activity
            android:name=".AboutusActivity"
            android:exported="false" />




    </application>

</manifest>
